unit Unit2;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Imaging.jpeg, Vcl.ExtCtrls,
  Vcl.ComCtrls, Vcl.ToolWin, Vcl.ActnMan, Vcl.ActnCtrls,StdStyleActnCtrls, XPStyleActnCtrls,
  Vcl.StdCtrls;

type
  TForm2 = class(TForm)
    Image1: TImage;
    ActionToolBar1: TActionToolBar;
    Button1: TButton;
    Button2: TButton;
    Button3: TButton;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Edit1: TEdit;
    Button4: TButton;
    Edit2: TEdit;
    Edit3: TEdit;
    Edit4: TEdit;
    Label5: TLabel;
    BalloonHint1: TBalloonHint;
    procedure Button4Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form2: TForm2;

implementation

{$R *.dfm}

procedure TForm2.Button4Click(Sender: TObject);

const
  GRAD = 'Kragujevac';
  LOKACIJA = 'Zeneva Lux';
  DATUM='12.03.2026';
  BR_GOSTIJU ='200' ;

begin
   if (Edit1.Text = GRAD) and (Edit2.Text = LOKACIJA) and (Edit3.Text = DATUM ) and (Edit4.Text = BR_GOSTIJU) then
   begin
      // pop up o poruci da je uspešno obaljena rezervacija
      BalloonHint1.Title := 'Obaveštenje';
      BalloonHint1.Description := 'Uspešno ste rezervisali!';
   end;




end;

end.
